<div class="container">
  <h1>new cocktail page</h1>


  <div class="form-style">
    <h2> Create a wonderful 🍸 </h2>
    <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name, label: "Choose your cocktail's name", error: "Cocktail's name is mandatory, please specify one", id: "input-new-cocktail" %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Go create", class: 'btn btn-danger' %>
    <% end %>
  </div>

</div>


